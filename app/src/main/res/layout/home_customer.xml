<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/bg_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="33dp"
                android:gravity="center"
                android:background="@drawable/cr12be9e4e4c4">

                <EditText
                    android:id="@+id/title"
                    android:layout_width="440dp"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="33dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="17dp"
                    android:text="Why Buy, When you can Rent"
                    android:textColor="#000000"
                    android:textSize="25sp" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/r146yskpjq5gk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="100dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/cr52baeb1b9"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:orientation="vertical"
                        >
                        <EditText
                            android:id="@+id/ruew2utpeok9"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginHorizontal="33dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/cr12be9e4e4c4"
                            android:hint="Zip Code"
                            android:inputType="text"
                            android:paddingHorizontal="15dp"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/from_date"
                                android:layout_weight="0.5"
                                android:layout_width="10dp"
                                android:layout_height="48dp"
                                android:layout_marginHorizontal="10dp"
                                android:background="@drawable/cr12be9e4e4c4"
                                android:hint="From Date"
                                android:onClick="showDatePicker"
                                android:inputType="none"
                                android:focusable="false"
                                android:clickable="true"
                                android:paddingHorizontal="15dp"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/from_time"
                                android:layout_weight="0.5"
                                android:layout_width="10dp"
                                android:layout_height="48dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="2dp"
                                android:background="@drawable/cr12be9e4e4c4"
                                android:hint="From time "
                                android:onClick="showTimePicker"
                                android:focusable="false"
                                android:clickable="true"
                                android:inputType="none"
                                android:paddingHorizontal="15dp"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:srcCompat="@drawable/down_arrow" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:rotation="180"
                                app:srcCompat="@drawable/down_arrow" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/to_date"
                                android:layout_weight="0.5"
                                android:layout_width="10dp"
                                android:layout_height="48dp"
                                android:layout_marginHorizontal="10dp"
                                android:background="@drawable/cr12be9e4e4c4"
                                android:hint="To Date"
                                android:onClick="showDatePicker"
                                android:inputType="none"
                                android:focusable="false"
                                android:clickable="true"
                                android:paddingHorizontal="15dp"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/to_time"
                                android:layout_weight="0.5"
                                android:layout_width="10dp"
                                android:layout_height="48dp"
                                android:layout_marginHorizontal="10dp"
                                android:background="@drawable/cr12be9e4e4c4"
                                android:hint="To Time"
                                android:onClick="showTimePicker"
                                android:focusable="false"
                                android:clickable="true"
                                android:inputType="none"
                                android:paddingHorizontal="15dp"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp" />
                        </LinearLayout>
                        <Button
                            android:id="@+id/button3"
                            android:layout_width="250dp"
                            android:layout_marginTop="10dp"
                            android:layout_height="60dp"
                            android:backgroundTint="#80A0AEC9"
                            android:text="Explore"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"/>
                    </LinearLayout>
                </LinearLayout>
                    <LinearLayout
                        android:id="@+id/bottom_nav"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#40A5A6A8"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="50dp"
                        android:paddingTop="5dp"
                        >

                        <!-- Home -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:srcCompat="@drawable/home_icon" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Home"
                                android:textColor="#000000"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <!-- Cart -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:srcCompat="@drawable/cart_icon" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cart"
                                android:textColor="#000000"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <!-- About -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:srcCompat="@drawable/a_icon" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="About"
                                android:textColor="#000000"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <!-- You -->
                        <LinearLayout
                            android:id="@+id/you"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:srcCompat="@drawable/person" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="You"
                                android:textColor="#000000"
                                android:textSize="20sp" />
                        </LinearLayout>



                </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>

