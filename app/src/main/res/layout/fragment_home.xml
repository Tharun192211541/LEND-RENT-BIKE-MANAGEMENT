<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Background Image -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/bg_image" />

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:focusableInTouchMode="true"
            android:descendantFocusability="beforeDescendants">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Heading Text -->
                <LinearLayout
                    android:layout_width="500dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginHorizontal="33dp"
                    android:gravity="center"
                    android:background="@drawable/cr12be9e4e4c4">

                    <TextView
                        android:layout_width="440dp"
                        android:layout_height="70dp"
                        android:layout_marginHorizontal="33dp"
                        android:gravity="center"
                        android:text="Why Buy, When you can Rent"
                        android:textColor="@color/black"
                        android:textSize="23sp" />
                </LinearLayout>

                <!-- Input Fields Layout -->
                <LinearLayout
                    android:id="@+id/r146yskpjq5gk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/cr52baeb1b9"
                    android:gravity="center"
                    android:paddingTop="70dp"
                    android:paddingBottom="50dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/ruew2utpeok9"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginHorizontal="33dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/cr12be9e4e4c4"
                        android:hint="Zip Code"
                        android:inputType="text"
                        android:paddingHorizontal="15dp"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <!-- From Date and Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/from_date"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/cr12be9e4e4c4"
                            android:hint="From Date"
                            android:onClick="showDatePicker"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:paddingHorizontal="15dp"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/from_time"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/cr12be9e4e4c4"
                            android:hint="From Time"
                            android:onClick="showTimePicker"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:paddingHorizontal="15dp"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Arrow Images -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/down_arrow" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:rotation="180"
                            app:srcCompat="@drawable/down_arrow" />
                    </LinearLayout>

                    <!-- To Date and Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/to_date"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/cr12be9e4e4c4"
                            android:hint="To Date"
                            android:onClick="showDatePicker"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:paddingHorizontal="15dp"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/to_time"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/cr12be9e4e4c4"
                            android:hint="To Time"
                            android:onClick="showTimePicker"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:paddingHorizontal="15dp"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Button -->
                    <Button
                        android:id="@+id/button3"
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="#80A0AEC9"
                        android:text="Explore"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>
