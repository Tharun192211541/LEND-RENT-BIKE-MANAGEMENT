<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Cart_Fragment">
    <LinearLayout
        android:id="@+id/cart_root_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Bookings Content Section -->
    <ScrollView
        android:id="@+id/bookings_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Current Booking Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Bookings"
                android:textSize="18sp"
                android:background="@drawable/cr20b000000"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:id="@+id/current_bookings_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:padding="8dp" />

            <!-- Previous Booking Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Previous Bookings"
                android:textSize="18sp"
                android:background="@drawable/cr20b000000"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:id="@+id/previous_bookings_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Empty Cart Placeholder (Initially Hidden) -->
    <FrameLayout
        android:id="@+id/empty_cart_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</FrameLayout>
