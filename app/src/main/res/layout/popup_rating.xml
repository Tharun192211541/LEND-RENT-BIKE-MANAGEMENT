<!-- res/layout/popup_review_breakdown.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp">
        <RatingBar
            android:id="@+id/MyRating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.1"
            android:progressTint="@color/gold"
            android:secondaryProgressTint="@color/gold"
            android:progressBackgroundTint="@color/gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/count"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:text="4.3 out of 5"

            android:textStyle="bold"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_margin="4dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/ratings"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:text="59 ratings"
        android:textStyle="bold"/>

    <!-- Cost -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cost" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ProgressBar
            android:id="@+id/progress_cost"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progress="80"
            android:max="100"
            android:progressTint="@android:color/holo_orange_dark"/>

        <TextView
            android:id="@+id/percent_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="80%" />
    </LinearLayout>

    <!-- Comfort -->
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Comfort" />
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="8dp">
        <ProgressBar android:id="@+id/progress_comfort"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:progress="70" android:max="100"
            android:progressTint="@android:color/holo_orange_dark"/>
        <TextView android:id="@+id/percent_comfort"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginStart="10dp" android:text="70%" />
    </LinearLayout>

    <!-- Vehicle Condition -->
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Vehicle Condition" />
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="8dp">
        <ProgressBar android:id="@+id/progress_condition"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:progress="75" android:max="100"
            android:progressTint="@android:color/holo_orange_dark"/>
        <TextView android:id="@+id/percent_condition"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginStart="10dp" android:text="75%" />
    </LinearLayout>

    <!-- Experience -->
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Experience" />
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="8dp">
        <ProgressBar android:id="@+id/progress_experience"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:progress="85" android:max="100"
            android:progressTint="@android:color/holo_orange_dark"/>
        <TextView android:id="@+id/percent_experience"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginStart="10dp" android:text="85%" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/see_ratings"
        android:text="See all Customer Ratings >"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"/>
</LinearLayout>
