<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="12dp">

    <!-- Header with Bike Image and Title -->
    <LinearLayout
        android:id="@+id/bike_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/bike_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/scooty"
            android:adjustViewBounds="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="How's your experience with us?"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>

    <!-- Ratings Section -->
    <LinearLayout
        android:id="@+id/review_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Ratings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp" />

        <!-- Rating Items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerHorizontal"
            android:showDividers="middle"
            android:dividerPadding="6dp">

            <!-- Cost -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cost"
                    android:textSize="15sp"
                    android:textColor="#333333" />

                <RatingBar
                    android:id="@+id/rating_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:scaleX="0.85"
                    android:scaleY="0.85" />
            </LinearLayout>

            <!-- Comfort -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Comfort"
                    android:textSize="15sp"
                    android:textColor="#333333" />

                <RatingBar
                    android:id="@+id/rating_comfort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:scaleX="0.85"
                    android:scaleY="0.85" />
            </LinearLayout>

            <!-- Vehicle Condition -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vehicle Condition"
                    android:textSize="15sp"
                    android:textColor="#333333" />

                <RatingBar
                    android:id="@+id/rating_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:scaleX="0.85"
                    android:scaleY="0.85" />
            </LinearLayout>

            <!-- Overall Experience -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Overall Experience"
                    android:textSize="15sp"
                    android:textColor="#333333" />

                <RatingBar
                    android:id="@+id/rating_overall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:scaleX="0.85"
                    android:scaleY="0.85" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Feedback Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Write a review"
        android:textColor="#FF0000"
        android:textSize="18sp"
        android:paddingStart="4dp" />

    <EditText
        android:id="@+id/feed"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/shape_border"
        android:hint="What should other customers know?"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:inputType="textMultiLine"
        android:gravity="top|start"
        android:textSize="15sp"
        android:padding="12dp"
        android:layout_marginTop="8dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="18dp"
        android:text="Submit"
        android:textSize="17sp"
        android:textColor="@color/yellow"
        android:backgroundTint="#000000" />
</LinearLayout>
